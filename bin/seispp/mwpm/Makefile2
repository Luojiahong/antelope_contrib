BIN=mwpm

cxxflags=-g
ldflags=-L$(ANTELOPE)/contrib/static
ldlibs=-lmwtpp -lseispp -lseispp_io -lgclgrid $(DBLIBS) $(TRLIBS) -lperf -lboost_serialization -lseispp -lseispp_io
SUBDIR=/contrib

include $(ANTELOPEMAKE) 
include $(ANTELOPEMAKELOCAL)
CXXFLAGS += -I$(BOOSTINCLUDE)

OBJS=mwpm.o
$(BIN) : $(OBJS)
	$(RM) $@
	$(CXX) $(CCFLAGS) -o $@ $(OBJS) $(LDFLAGS) $(LDLIBS)
LDFLAGS += -L$(BOOSTLIB)
